@model GillyBeanCentral.Areas.Admin.Models.SmallCRUDButtonModel
@using GillyBeanCentral.Areas.Admin.Models;

@*td styles could be in a CSS file*@

<td style="width:120px;">
    <div class=" btn-group " role="group">
        @*Edit Button*@
        @Html.Partial("_SmallCRUDButtonPartial",
               new SmallCRUDButtonModel
               {
                   Action = "Edit",
                   ButtonType = "btn-primary",
                   Glyph = "pencil",
                   Text = "Edit button",
                   ID = Model.ID,
                   VenueID = Model.VenueID,
                   VenueTypeID = Model.VenueTypeID
               })
        @*Detail Button*@
        @Html.Partial("_SmallCRUDButtonPartial",
               new SmallCRUDButtonModel
               {
                   Action = "Details",
                   ButtonType = "btn-success",
                   Glyph = "list",
                   Text = "Details button",
                   ID = Model.ID,
                   VenueID = Model.VenueID,
                   VenueTypeID = Model.VenueTypeID
               })

        @*Delete Button*@
        @Html.Partial("_SmallCRUDButtonPartial",
              new SmallCRUDButtonModel
              {
                  Action = "Delete",
                  ButtonType = "btn-danger",
                  Glyph = "trash",
                  Text = "Delete button",
                  ID = Model.ID,
                  VenueID = Model.VenueID,
                  VenueTypeID = Model.VenueTypeID
              })


    </div>
</td>


