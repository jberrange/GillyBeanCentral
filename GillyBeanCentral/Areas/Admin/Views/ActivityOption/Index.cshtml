@model IEnumerable<GillyBeanCentral.Entities.ActivityOption>
@using GillyBeanCentral.Areas.Admin.Models;

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-condensed">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ActivityName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Byline)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ActivityName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Byline)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>

            @Html.Partial("_MaintenanceButtonsPartial",
                                    new SmallCRUDButtonModel { ID = item.Id }
                             )


        </tr>
    }

</table>
